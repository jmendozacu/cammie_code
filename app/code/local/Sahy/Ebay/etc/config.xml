<config>
    <modules>
        <Sahy_Ebay>
            <version>0.1.0</version>
        </Sahy_Ebay>
    </modules>
    <frontend>
        <routers>
            <ebay>
                <use>standard</use>
                <args>
                    <module>Sahy_Ebay</module>
                    <frontName>ebay</frontName>
                </args>
            </ebay>
        </routers>
        <layout>
            <updates>
                <ebay>
                    <file>ebay.xml</file>
                </ebay>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <ebay>
                    <use>admin</use>
                    <args>
                            <module>Sahy_Ebay</module>
                            <frontName>ebay</frontName>
                    </args>
            </ebay>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<ebay module="ebay">
				<title>Ebay</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="ebay">
						<title>Import Items</title>
						<sort_order>0</sort_order>
						<action>ebay/adminhtml_ebay</action>
					</items>
				</children>
			</ebay>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
                                                <system>  
                                                    <children>  
                                                       <config>  
                                                           <children>  
                                                               <ebay>  
                                                                    <title>Settings</title>  
                                                                    <sort_order>10</sort_order>  
                                                               </ebay>  
                                                           </children>  
                                                        </config>  
                                                    </children>  
                                                </system>  
						<Sahy_Ebay>
							<title>Ebay Module</title>
							<sort_order>10</sort_order>
						</Sahy_Ebay>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<ebay>
					<file>ebay.xml</file>
				</ebay>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <ebay>
                <class>Sahy_Ebay_Model</class>
                <resourceModel>ebay_mysql4</resourceModel>
            </ebay>
            <ebay_mysql4>
                <class>Sahy_Ebay_Model_Mysql4</class>
                <entities>
                    <ebay>
                        <table>ebay</table>
                    </ebay>
                </entities>
            </ebay_mysql4>
        </models>
        <resources>
            <ebay_setup>
                <setup>
                    <module>Sahy_Ebay</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ebay_setup>
            <ebay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ebay_write>
            <ebay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ebay_read>
        </resources>
        <blocks>
            <ebay>
                <class>Sahy_Ebay_Block</class>
            </ebay>
        </blocks>
        <helpers>
            <ebay>
                <class>Sahy_Ebay_Helper</class>
            </ebay>
        </helpers>
    </global>
</config>